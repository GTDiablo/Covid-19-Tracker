<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detailsFragment"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DetailsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/active_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            style="@style/Box"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recovered_text"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/recovered_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            style="@style/Box"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/active_text"
            app:layout_constraintBottom_toTopOf="@id/confirmed_text"
            />
        <TextView
            android:id="@+id/confirmed_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            style="@style/Box"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recovered_text"
            app:layout_constraintBottom_toTopOf="@id/death_text"
            />
        <TextView
            android:id="@+id/death_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            style="@style/Box"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmed_text"
            app:layout_constraintBottom_toTopOf="@id/date_text"
            />
        <TextView
            android:id="@+id/date_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/brown"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/death_text"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>